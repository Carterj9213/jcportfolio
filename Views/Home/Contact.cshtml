@model jcportfolio.Models.EmailModel
<hr />
<div class="container">
    <div class="contact-info">
        <h2>CONTACT ME</h2>
        <p></p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Want to contact me? Just fill in all the empty fields below to send me an email:</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">

            <div class="form-group">
                @*@Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })*@
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="form-group">
                @*@Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })*@
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Example@email.com" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                @*@Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })*@
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="form-group">
                @*@Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })*@
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Body, new { @class = "form-control", placeholder = "Enter Text Here" })
                    @Html.ValidationMessageFor(m => m.Body)
                </div>
            </div>
        </div>
        <br />

        <div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary" value="Send" />
                </div>
            </div>
        </div>



    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}